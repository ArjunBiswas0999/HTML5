<core:View xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
           xmlns="sap.m" controllerName="sap.ca.ui.sample.views.dialogs.MessageHandling">
    <Page id="page" title="Message Handling">
        <content>
            <Button id="btnMsgToast" press="onPressMessageToast" text="Show (Success) MessageToast"/>
            <Button id="btnError" press="onPressError" text="Open (Error) Message Box"/>
            <Button id="btnWarning" press="onPressWarning" text="Open (Warning) Message Box"/>
            <Button id="btnInfo" press="onPressInfo" text="Open (Info) Message Box"/>
            <Button id="btnSuccess" press="onPressSuccess" text="Open (Success) Message Box"/>
        </content>
        <html:h3>Documentation</html:h3>
        <html:p>
            More detailed information about this component you can find in the wiki page:
            <html:a href="https://wiki.wdf.sap.corp/wiki/display/FastFioriplanning/Message+Handling" target="_blank">Message Handling</html:a>
        </html:p>
    </Page>
</core:View>
